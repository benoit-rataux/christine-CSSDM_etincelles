{% if element is defined %}
    {% set href = path('app_'~entityName~'_'~action, {'id': element.id}) %}
{% else %}
    {% set href = path('app_'~entityName~'_'~action) %}
{% endif %}

{% if confirm is defined %}
    {% set onClick = 'return confirm(\''~confirm~'\');' %}
{% else %}
    {% set onClick = null %}
{% endif %}

{% include 'widget/button/_base.html.twig' with {
    'href':             href,
    'cssClassModifier': action,
    'text':             text,
    'onClick':          onClick,
} %}