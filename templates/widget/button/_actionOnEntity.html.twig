{% if element is defined %}
    {% set path = path('app_'~entityName~'_'~action, {'id': element.id}) %}
{% else %}
    {% set path = path('app_'~entityName~'_'~action) %}
{% endif %}

{% if confirm is defined %}
    {% set onClick = 'return confirm(\''~confirm~'\');' %}
{% else %}
    {% set onClick = null %}
{% endif %}

{% include 'widget/button/_base.html.twig' with {
    'path':             path,
    'cssClassModifier': action,
    'text':             text,
    'onClick':          onClick,
} %}