{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    
    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ student.id }}</td>
        </tr>
        <tr>
            <th>Firstname</th>
            <td>{{ student.firstname }}</td>
        </tr>
        <tr>
            <th>Surname</th>
            <td>{{ student.surname }}</td>
        </tr>
        </tbody>
    </table>
    
    {{ include('widget/button/_base.html.twig', {
        'text': 'retour',
        'path': path('app_student_index'),
    }) }}
    
    {{ include('widget/button/crud/_update.html.twig', {'element': student, 'entityName': 'student'}) }}
    
    {{ include('student/_delete_form.html.twig') }}
{% endblock %}
